generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Batch {
  id  Int       @id @default(autoincrement())
  ref String    @unique
  sku String
  qty Int
  eta DateTime?
}

model OrderLine {
  id       Int    @id @default(autoincrement())
  orderref String
  sku      String
  qty      Int

  @@unique([orderref, sku])
}
